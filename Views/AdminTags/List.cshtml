@model List<BlogApp.Models.Domain.Tag>
@{
    int nextPage = Convert.ToInt32(ViewBag.PageNo)+1;
    int previousPage = Convert.ToInt32(ViewBag.PageNo)-1;
}
<div class="bg-danger bg-opacity-10 py-2">
    <div class="container">
        <h1 class="fw-light">Show All Tags - Admin Functionality</h1>
    </div>
</div>
<form method="get" asp-controller="AdminTags" asp-action="List">
    <div class="container mt-3">
        <div class="row">
            <div class="col col-md-3 d-flex">
                <input type="text" class="form-control" name="searchQuery" value="@ViewBag.SearchQuery"/>
                <button type="submit" class="btn btn-dark ms-3"><i class="bi bi-search"></i></button>
            </div>
        </div>
    </div>
</form>

<div class="container mt-3">
    @if(Model !=null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name
                        <span>
                            <span>
                                <a class="btn btn-light" asp-action="List" asp-controller="AdminTags" asp-route-sortBy="Name" asp-route-sortDirection="Asc" asp-route-searchQuery="@ViewBag.SearchQuery"><i class="bi bi-arrow-up"></i></a>
                            </span>
                            <span>
                                <a class="btn btn-light" asp-action="List" asp-controller="AdminTags" asp-route-sortBy="Name" asp-route-sortDirection="Desc" asp-route-searchQuery="@ViewBag.SearchQuery"><i class="bi bi-arrow-down"></i></a>
                            </span>
                        </span>
                    </th>
                    <th>Display Name
                        <span>
                            <span>
                                <a class="btn btn-light" asp-action="List" asp-controller="AdminTags" asp-route-sortBy="DisplayName" asp-route-sortDirection="Asc" asp-route-searchQuery="@ViewBag.SearchQuery"><i class="bi bi-arrow-up"></i></a>
                            </span>
                            <span>
                                <a class="btn btn-light" asp-action="List" asp-controller="AdminTags" asp-route-sortBy="DisplayName" asp-route-sortDirection="Desc" asp-route-searchQuery="@ViewBag.SearchQuery"><i class="bi bi-arrow-down"></i></a>
                            </span>
                        </span>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var tag in Model)
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td><a class="" asp-area="" asp-controller="AdminTags" asp-action="Edit" asp-route-id="@tag.Id">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" asp-controller="AdminTags" asp-action="List" asp-route-pageNo="@previousPage" asp-route-pageSize="@ViewBag.PageSize" asp-route-sortBy="@ViewBag.SortBy" asp-route-sortDirection="@ViewBag.SortDirection">Previous</a></li>
                @for(int i=1;i<=ViewBag.TotalPages;i++)
                {
                <li class="page-item">
                    <a class="page-link" asp-controller="AdminTags" asp-action="List" asp-route-pageNo="@i" asp-route-pageSize="@ViewBag.PageSize" asp-route-sortBy="@ViewBag.SortBy" asp-route-sortDirection="@ViewBag.SortDirection">@i</a>
                </li>

                }
                <li class="page-item"><a class="page-link" asp-controller="AdminTags" asp-action="List" asp-route-pageNo="@nextPage" asp-route-pageSize="@ViewBag.PageSize" asp-route-sortBy="@ViewBag.SortBy" asp-route-sortDirection="@ViewBag.SortDirection">Next</a></li>
            </ul>
        </nav>
    }
    else{
        <h3 class="fw-light">No Tags Found</h3>

    }
</div>
